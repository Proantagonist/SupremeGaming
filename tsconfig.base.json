{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@supremegaming/common/entities": ["libs/common/entities/src/index.ts"],
      "@supremegaming/common/entities/ark": ["libs/common/entities/ark/src/index.ts"],
      "@supremegaming/common/entities/steam": ["libs/common/entities/steam/src/index.ts"],
      "@supremegaming/common/entities/servers": ["libs/common/entities/servers/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
